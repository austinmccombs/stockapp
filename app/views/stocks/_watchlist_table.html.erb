

<table class = 'table table-striped table-bordered table-hover'>
  <thead class = 'thead-dark'>
    <tr>
      <th>Company</th>
      <th>Ticker</th>
      <th>Current Price</th>
      <th>Market Cap</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <% if stock.user_id == current_user.id %>
         <% @api = StockQuote::Stock.new(api_key: 'pk_61becff1e4974bacba63b255c413dc6f') %>
         <% @ticker = StockQuote::Stock.quote(stock.ticker) %>
            <% if !stock.ticker%>
              <tr>
                <td><%= link_to 'Error', stock %></td>
                <td><%= stock.ticker %></td>
                <td>N/A</td>
                <td>N/A</td>
                <td><center><%= link_to 'Remove', stock, method: :delete, data: { confirm: 'Are you sure?' } %></center></td>
              </tr>
            <% else %>
              <tr>
                <td><%= link_to @ticker.company_name, stock %></td>
                <td><%= @ticker.symbol %></td>
                <td>$<%= number_with_precision(@ticker.latest_price, :precision => 2, :delimiter => ',')  %></td>
                <td><%= number_with_precision(@ticker.market_cap, :precision => 2, :delimiter => ',')%></td>
                <td><center><%= link_to 'Remove', stock, method: :delete, data: { confirm: 'Are you sure?' } %></center></td>
              </tr>
          <% end %>
          
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock', new_stock_path, class: 'btn btn-outline-secondary' %>